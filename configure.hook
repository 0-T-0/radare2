#!/bin/sh
case "$1" in
--version|--help)
	: # nothing to do here
	;;
*)
	[ plugins.def.cfg -nt ./plugins.cfg ] && rm -f plugins.cfg
	[ ! -e plugins.cfg ] && ./configure-plugins $@
	[ -e r2-bindings/configure-langs ] && \
		r2-bindings/configure-langs $@
	TIP=`git log HEAD^..HEAD|head -n1|cut -d ' ' -f2`
	echo
	;;
esac
